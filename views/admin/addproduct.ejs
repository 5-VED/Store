            </div>

            <div class="form-control">
                <label for="price">Price</label>
                <input type="number" name="price" id="price" step="0.01">
            </div>

            <div class="form-control">
                <label for = "desription">Desripition</label>
                <!-- <input type="text" name="desripition" id="desripition"> -->
